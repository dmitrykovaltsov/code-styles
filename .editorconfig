root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{js,json,cjs,yml}]
indent_style = space
indent_size = 2

[.*rc]
indent_style = space
indent_size = 2

[*.{scss,css}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space

[{*.txt,wp-config-sample.php}]
end_of_line = crlf
